@model IndexViewModel

@{
    ViewBag.Title = "Blog Website";
    ViewBag.Description = "This Blog has everything!";
    ViewBag.Keywords = "blog programming travel photography";
}


<div class="main-img">
    <span class="title">Amazing Blog Site!</span>
</div>

<div class="container">
    @foreach (var post in Model.Posts)
    {
        var image_path = $"/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@image_path" />
            <span class="title">
                @post.Title
            </span>
        </a>
    }

    <div>
        @if (Model.PageNumber > 1)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category"
               asp-route-pageNumber="@(Model.PageNumber - 1)">Previous Page</a>
        }
        @if (Model.NextPage)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category"
               asp-route-pageNumber="@(Model.PageNumber + 1)">Next Page</a>
        }
    </div>
</div>